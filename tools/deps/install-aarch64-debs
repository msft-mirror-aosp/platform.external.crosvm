    libepoxy-dev:arm64 \
    libssl-dev:arm64 \
    libswscale-dev:arm64 \
    libva-dev:arm64 \
    libwayland-dev:arm64 \
    libxext-dev:arm64 \
    qemu-efi-aarch64 \
    qemu-system-aarch64 \
    qemu-user-static
